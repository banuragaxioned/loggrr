{
  "name": "loggrr",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "check-types": "turbo check-types",
    "clean": "turbo clean && rm -rf node_modules && rm -rf .turbo",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "auth:gen": "turbo -F server auth:gen",
    "dev": "turbo dev",
    "dev:server": "turbo -F server dev",
    "dev:web": "turbo -F web dev",
    "postinstall": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "pkg:update": "pnpm up --recursive -i --latest",
    "start": "turbo start"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@manypkg/cli": "^0.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "turbo": "^2.5.2",
    "web": "^0.1.0"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": "22.x",
    "pnpm": ">=9.15.4"
  }
}
